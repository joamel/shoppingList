<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent" android:padding="16dp">

    <EditText
        android:id="@+id/edit_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Antal" />

    <EditText
        android:id="@+id/edit_unit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_amount"
        android:hint="Enhet" />

    <EditText
        android:id="@+id/edit_ingrdnt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_unit"
        android:hint="Vara" />

    <EditText
        android:id="@+id/edit_cat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_ingrdnt"
        android:hint="Kategori" />

</RelativeLayout>